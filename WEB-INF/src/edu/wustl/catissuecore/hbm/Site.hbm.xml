<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping
>
    <class
        name="edu.wustl.catissuecore.domain.Site"
        table="CATISSUE_SITE"
		lazy="true"
    >
    
    <cache usage="read-write" />

        <id
            name="id"
            column="IDENTIFIER"
            type="long"
            length="30"
            unsaved-value="null"
        >
            <generator class="native">
                <param name="sequence">CATISSUE_SITE_SEQ</param>
              <!--  
                  To add non XDoclet generator parameters, create a file named 
                  hibernate-generator-params-Site.xml 
                  containing the additional parameters and place it in your merge dir. 
              --> 
            </generator>
        </id>

        <property
            name="name"
            type="string"
            update="true"
            insert="true"
            column="NAME"
            length="255"
            not-null="true"
            unique="true"
        />

        <property
            name="type"
            type="string"
            update="true"
            insert="true"
            column="TYPE"
            length="50"
        />

        <property
            name="emailAddress"
            type="string"
            update="true"
            insert="true"
            column="EMAIL_ADDRESS"
            length="255"
        />

        <many-to-one
            name="coordinator"
            class="edu.wustl.catissuecore.domain.User"
            cascade="none"
             
            update="true"
            insert="true"
            column="USER_ID" lazy="false" 
        />

        <property
            name="activityStatus"
            type="string"
            update="true"
            insert="true"
            column="ACTIVITY_STATUS"
            length="50"
        />

        <many-to-one
            name="address"
            class="edu.wustl.catissuecore.domain.Address"
            cascade="none"
             
            update="true"
            insert="true"
            column="ADDRESS_ID"
        />

        <set
            name="abstractSpecimenCollectionGroupCollection"
            table="CATISSUE_ABS_SPECI_COLL_GROUP"
            lazy="true"
            inverse="true"
            cascade="save-update"
            sort="unsorted"
        >
        
        <cache usage="read-write" />

              <key
                  column="SITE_ID"
              >
              </key>

              <one-to-many
                  class="edu.wustl.catissuecore.domain.AbstractSpecimenCollectionGroup"
              />

        </set>
        
         <set
            name="assignedSiteUserCollection"
            table="CATISSUE_SITE_USERS"
            lazy="true"
            inverse="true"
            cascade="none"
            sort="unsorted"
        >

              <key
                  column="SITE_ID"
              >
              </key>

              <many-to-many
                  class="edu.wustl.catissuecore.domain.User"
                  column="USER_ID"
              />

        </set>
        
        <set
            name="collectionProtocolCollection"
            table="CATISSUE_SITE_CP"
            lazy="false"
            inverse="false"
            cascade="none"
            sort="unsorted"
        >

            <key
                column="SITE_ID"
            >
            </key>

            <many-to-many
                class="edu.wustl.catissuecore.domain.CollectionProtocol"
                column="COLLECTION_PROTOCOL_ID"
                outer-join="auto"
             />

        </set>

        <!--
            To add non XDoclet property mappings, create a file named
                hibernate-properties-Site.xml
            containing the additional properties and place it in your merge dir.
        -->
		<!--  Added for eMPI integration -->
		 		<property
		            name="facilityId"
		            type="string"
		            update="true"
		            insert="true"
		            column="FACILITY_ID"
		            length="50"
		        />
    </class>
    <query name="getSiteByContainerName">Select ST.site from edu.wustl.catissuecore.domain.StorageContainer ST WHERE ST.name= ?
</query>
<query name="getSiteIdByName">select site.id from edu.wustl.catissuecore.domain.Site site where site.name=?</query>
<query name="getAllSiteNames">select st.name, st.id from edu.wustl.catissuecore.domain.Site st where st.activityStatus='Active'</query>

</hibernate-mapping>

		{
			var isValid:Boolean = true;
			isValid = validateComboBoxField(receiverName,"selectedItem","Vyberte příjemce") && isValid;			
			isValid = validateComboBoxField(recievedQuality,"selectedItem","Vyberte obdrženou kvalitu") && isValid;			
			return isValid;
		}*/
	]]>
</mx:Script>
<components:MyCanvas>
<mx:HBox>
	<adobe:AutoComplete id="receiverName" dataProvider="{MetadataModel.getInstance().userList}" dropdownFactory="{myDropdownFactory}"/>
</mx:HBox>
</components:MyCanvas>
<components:MyCanvas>
		<mx:DateField id="receivedOn" formatString="{mspParameter.dateFormat}" yearNavigationEnabled="true"/>
</components:MyCanvas>
<components:MyCanvas>
		<mx:HBox>
		<mx:ComboBox id="receivedHour" dataProvider="{MetadataModel.getInstance().hourListArray}"/><mx:Label text="Hod"/>
		<mx:ComboBox id="receivedMinute" dataProvider="{MetadataModel.getInstance().miniuteListArray}"/><mx:Label text="Min"/>
		</mx:HBox>
</components:MyCanvas>

<components:MyCanvas>
	<adobe:AutoComplete id="recievedQuality" dataProvider="{MetadataModel.getInstance().receivedQualityList}" dropdownFactory="{myDropdownFactory}" />
</components:MyCanvas>
<components:MyCanvas>
	<mx:TextArea id="comment">
		
	</mx:TextArea>
</components:MyCanvas>
<components:MyCanvas/>
</mx:VBox>
